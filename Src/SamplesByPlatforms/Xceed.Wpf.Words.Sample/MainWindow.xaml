<Window x:Class="Xceed.Wpf.Words.Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Xceed.Wpf.Words.Sample"
        mc:Ignorable="d"
        Title="Xceed Words.NET Samples"
        Height="287"
        Width="700">
  <Grid>
    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,50,0,0">
      <TextBlock Text="Select a button to export data to check how Xceed.Words.NET works!!!"
                 Margin="10"
                 FontSize="20" />
      <Button Name="btnGenerateSimpleDoc"
              Content="Generate Simple Document"
              Width="200"
              Margin="10"
              Click="btnGenerateSimpleDoc_Click" />
      <Button Name="btnGenerateListDoc"
              Content="Generate List Document"
              Width="200"
              Margin="10"
              Click="btnGenerateListDoc_Click" />
      <Button Name="btnGenerateTableDoc"
              Content="Generate Table Document"
              Width="200"
              Margin="10"
              Click="btnGenerateTableDoc_Click" />
    </StackPanel>
  </Grid>
</Window>
