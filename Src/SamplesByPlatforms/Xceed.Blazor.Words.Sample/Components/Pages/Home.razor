@page "/"
@inject WordCreator wordCreator
@rendermode InteractiveServer

<PageTitle>Home</PageTitle>

<h1>Please select an option to check how Xceed.Word.Net works!</h1>

<div style="display: flex; flex-direction: column; align-items: center; margin-top: 50px;">
	<button class="btn btn-primary" @onclick="GenerateSimpleDocument" style="margin: 10px;">Generate Simple Document</button>
	<button class="btn btn-success" @onclick="GenerateList" style="margin: 10px;">Generate Listed Document</button>
	<button class="btn btn-secondary" @onclick="GenerateTable" style="margin: 10px;">Generate Table Document</button>
</div>


@code {
	private async Task GenerateSimpleDocument() => await wordCreator.CreateSimpleDoc();
	private async Task GenerateList() => await wordCreator.CreateListedDoc();
	private async Task GenerateTable() => await wordCreator.CreateTableDoc();
}
